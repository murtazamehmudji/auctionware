extends layout
block content
    div(class="signUpForm my-2 mx-auto px-3")
        div(class="categoryName bg-dark text-white pl-3 pb-2 rounded") Update Profile
        form(class="mt-2", method="post", action="/user/updateprofile/" )
            if(errors)
                div(class="form-group text-danger") Please Enter Valid Details
            if(updated)
                div(class="form-group text-success") Profile Updated
            div(class="form-group")
                label(for="inputFirstName") First Name
                input(value=userDetail.first_name, type="text", name="f_name", class="form-control", id="inputFirstName", placeholder="Enter First Name", required)
            div(class="form-group")
                label(for="inputLastName") Last Name
                input(value=userDetail.last_name, type="text", name="l_name", class="form-control", id="inputLastName", placeholder="Enter Last Name", required)
            div(class="form-group")
                label(for="inputEmail") Email address
                input(value=userDetail.email, type="email", name="email", class="form-control", id="inputEmail", placeholder="Enter email", required)
            div(class="form-group")
                label(for="inputMobile") Mobile Number
                input(value=userDetail.mobile, type="number", name="mobile", class="form-control", id="inputMobile", placeholder="Enter Mobile Number", required)
            div(class="form-group")
                label(for="inputPassword") Password
                input(value=userDetail.password, type="password", name="password", class="form-control", id="inputPassword", placeholder="Password", required)
            button(type="submit", class="btn btn-primary") Update Profile